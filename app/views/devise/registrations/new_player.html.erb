<%= render "shared/second-header"%>
<h2>選手情報登録</h2>
<p>※登録は任意です</p>

<%= form_for @player do |f| %>
  <%= render "devise/shared/error_messages", resource: @player %>

  <div class="field">
    <label class="form-text">年齢</label>
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <label class="form-text">所属チーム</label>
    <%= f.text_field :affiliation %>
  </div>

  <div class="field">
    <label class="form-text">身長</label>
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <label class="form-text">体重</label>
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <label class="form-text">投法</label>
    <%= f.collection_select(:pitching_id, Pitching.all, :id, :name, {}, {class:"pitching-select"}) %>
  </div>

  <div class="field">
    <label class="form-text">打法</label>
    <%= f.collection_select(:batting_id, Batting.all, :id, :name, {}, {class:"batting-select"}) %>
  </div>

  <div class="field">
    <label class="form-text">地域</label>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>