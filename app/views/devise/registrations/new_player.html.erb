<h2>選手情報登録</h2>

<%= form_for @player do |f| %>
  <%= render "devise/shared/error_messages", resource: @player %>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age %>
  </div>

  <div class="field">
    <%= f.label :affiliation %><br />
    <%= f.text_field :affiliation %>
  </div>

  <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :pitching_id %><br />
    <%= f.collection_select(:pitching_id, Pitching.all, :id, :name, {}, {class:"pitching-select"}) %>
  </div>

  <div class="field">
    <%= f.label :batting_id %><br />
    <%= f.collection_select(:batting_id, Batting.all, :id, :name, {}, {class:"batting-select"}) %>
  </div>

  <div class="field">
    <%= f.label :prefecture_id %><br />
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"prefecture-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>