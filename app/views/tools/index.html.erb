<%= render "shared/header" %>
<h1>トップページ</h1>
<%= search_form_for @p, url: tools_search_path do |f| %>
  <%= f.label :category_id_eq, 'カテゴリー：' %>
  <%= f.collection_select :category_id_eq, Category.all, :id, :name %>
  <br>
  <%= f.label :maker_id_eq, 'メーカー：' %>
  <%= f.collection_select :maker_id_eq, Maker.all, :id, :name %>
  <br>
  <%= f.label :evaluation_id, '評価：' %>
  <%= f.radio_button :evaluation_id_gteq, '' %>
  指定なし
  <%= f.radio_button :evaluation_id_gteq, 4 %>
  ★3以上
  <%= f.radio_button :evaluation_id_gteq, 5 %>
  ★4以上
  <%= f.radio_button :evaluation_id_gteq, 6 %>
  ★5
  <br>
  <%= f.submit '検索' %>
<% end %>

<div class="contents row">
  <%= tool_lists(@tools) %>
</div>