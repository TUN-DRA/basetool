  <%#= f.collection_select :category_id, Category.all, :id, :name %>
  <%#= f.submit "検索", class: "search-btn" %>
<%# end %>
<div class="contents row">
  <%# @tools.each do |tool| %>
  <%#= search_form_for @q, url: tools_searchtool_path do |f| %>
  <%#= tool.name %>
  <%# @q.each do |tool| %>
  <%# @results.each do |tool| %>
    <%#= render partial: "tool", locals: { tool: tool } %>
    <%= tool_lists(@tools) %>
  <%# end %>
</div>
<% else %>
<h2>検索結果はありません</h2>
<% end %>
