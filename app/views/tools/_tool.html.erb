<div class="content_post"> 
<p class="aaa"><%= tool.category.name %></p>
<div class=tools>
  <div class="maker-icon">
  <%= image_tag("#{tool.maker.id}.png") %>
  </div>
  <div class="tool_img">
  <%= image_tag tool.image.variant(resize: '400x400') %>
  </div>
  </div>
      <div class="more">
        <span><%#= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '詳細', tool_path(tool.id), method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == tool.user_id %>
            <li>
              <%= link_to '編集', edit_tool_path(tool.id), method: :get %>
            </li>
            <li>
              <%= link_to '削除', tool_path(tool.id), method: :delete %>
            </li>
          <% end %>
        </ul>
      </div>
      <span class="name">
        <a href="/users/<%= tool.user.id %>">
          <span>by</span> <%= tool.user.nickname %>
        </a>
      </span>
</div>